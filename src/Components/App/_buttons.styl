/**
 * App - Buttons
 */

button
	cursor pointer

	&
	&:focus
	&:hover
		background none
		box-shadow none
		outline none
		border none
		padding 0
		font-size inherit
		font-weight inherit
		font-style inherit
		font-family inherit
		line-height inherit
		color inherit
		text-align inherit

#tamachi-button-toggle_sidebar
#tamachi-button-toggle_color
.tamachi-button-toggle_search
	width 4rem
	height 4rem
	display flex
	color var(--color_07)
	fill currentColor
	align-items center
	justify-content center

	&:hover
		transition color .2s $e_standard
		color var(--color_04)
