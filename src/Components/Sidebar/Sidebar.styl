/**
 * Sidebar
 */

#tamachi-sidebar
	position relative
	background-color var(--background_color)
	display flex
	flex-direction column
	flex 0 0 $sidebar_width
	height 100%
	border-left .1rem solid var(--color_02)

	.simplebar-content
		display flex
		flex-flow row wrap

		#tamachi-button-toggle_sidebar
		#tamachi-button-toggle_color
		.tamachi-button-toggle_search
			z-index 100
			position sticky
			top 1.5rem
			margin-top 1.5rem
			margin-bottom 1.5rem

		#tamachi-button-toggle_color
			margin-left auto
			padding-right .5rem

		.tamachi-button-toggle_search
			margin-right ($sidebar_paddinglr / 4)
