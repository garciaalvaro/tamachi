/**
 * Menu
 */

+prefix-classes('tamachi-')

	#tamachi-menu
		flex 0 0 100%
		overflow hidden
		padding-bottom 10rem

	.menu-item-container
		cursor pointer
		padding-right $sidebar_paddinglr
		margin-left $sidebar_paddinglr
		transition transform .2s $e_deceleration

		&:first-child
			margin-top -.8em

		&:hover
			transform translateX(-.4rem)

		&.is_active:hover
			transform none

	.menu-item
		align-items center
		position relative
		justify-content space-between
		display flex
		width 100%
		padding .8em 0

		button&
			padding .8em 0

		svg
			margin-right -.6rem
			flex 0 0 2.2rem
			height 2.2rem
			fill inherit

		span
			flex 1 0 0

		&::selection
			background transparent

		&:before
			content ""
			position absolute
			top 0
			left -2rem
			width .1rem
			height 100%
			border-left .1rem solid var(--color_02)

		.sibling-is_active &:before
			border-left .2rem solid var(--color_07)

	.depth-0
		.menu-item:before
			content normal

	for num in (1..5)

		.depth-{num}
			padding-left (num*2)rem
