/**
 * Layout Archive
 */

.tamachi-layout-archive

	#tamachi-content .simplebar-content
		display flex
		flex-direction column
		min-height 100%

+prefix-classes('tamachi-')

	.no_results
		padding ($archive_item_paddingtb/1.3) $archive_item_paddinglr

		span
			display block

	.no_results-content
		margin-top .5em

	#tamachi-archive-toolbar
		padding ($archive_item_paddingtb/2) $archive_item_paddinglr
		border-bottom .1rem solid var(--color_02)
		position sticky
		top 0
		background var(--background_color)

		h1
			margin 0
			font-size inherit
			font-weight inherit

	.layout-archive

		.post-excerpt
		.post-title
			max-width 80rem

		.post-excerpt
			margin-top 1em
			color var(--color_06)

		.post-title
			color var(--color_1)

		.post
			border-bottom .1rem solid var(--color_01)
			transition background-color .1s $e_deceleration

			&:hover
				background-color var(--color_007)

			h3
				font-weight inherit
				font-size inherit

			h3
			p
				margin 0

			a
				padding $archive_item_paddingtb $archive_item_paddinglr
				display block
